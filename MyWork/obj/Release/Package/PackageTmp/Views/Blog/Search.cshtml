@model IEnumerable<MyWork.Models.Blog>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="min">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-8">
                <div class="sec-heading center">
                    <h3 class="font-2">نتایج جستجوی شما</h3>
                </div>
            </div>
        </div>
        @if (Model.Count() == 0)
        {
            <div class="sec-heading center">
                <h3 class="font-2"><p>هیچ نتیجه‌ای پیدا نشد.</p></h3>
            </div>
        }
        else
        {
            <div class="row justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                        <div class="blg_grid_box">
                            <div class="blg_grid_thumb">
                                <a href="blog-detail.html"><img src="~/img/@item.Image" class="img-fluid" alt="" /></a>
                            </div>
                            <div class="blg_grid_caption">
                                <div class="blg_tag"><span>بازاریابی</span></div>
                                <div class="blg_title"><h4><a href="blog-detail.html">@item.Title</a></h4></div>
                                <div class="blg_desc"><p>@item.Preamble</p></div>
                            </div>
                            <div class="crs_grid_foot">
                                <div class="crs_flex">
                                    <div class="crs_fl_first">
                                        <div class="crs_tutor">
                                            <div class="crs_tutor_thumb"><a href="~/Blog/Detail?id=@item.Id"><img src="~/img/team-5.jpg" class="img-fluid circle" alt="" /></a></div>
                                        </div>
                                    </div>
                                    <div class="crs_fl_last">
                                        <div class="foot_list_info">
                                            <ul>
                                                <li><div class="elsio_ic"><i class="fa fa-eye text-success"></i></div><div class="elsio_tx">10 بازدید</div></li>
                                                <li><div class="elsio_ic"><i class="fa fa-clock text-warning"></i></div><div class="elsio_tx">@item.CreatedDate</div></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
<div class="clearfix"></div>