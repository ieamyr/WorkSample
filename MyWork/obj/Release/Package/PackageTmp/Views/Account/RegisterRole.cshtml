@model MyWork.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>assign Role to user</h2>

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>create a new account </h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">@Html.Label("Select role", new { @class = "contorol-label" })</div>
    <div>@Html.DropDownList("UserName")</div>
    <div class="form-group">@Html.Label("Select Name", new { @class = "contorol-label" })</div>
    <div>@Html.DropDownList("Name")</div>
    <div class="form-group"><input type="submit" value="assign role" class="btn btn-dark"/></div>
}